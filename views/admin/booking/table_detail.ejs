<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a href="/admin/booking" class="btn btn-warning">Back</a>
    </div>
    <div class="card-body">
    <div class="row">
        <div class="col-md-4">
            <img src="http://localhost:3000/<%= booking.payments.proofPayment %>" alt="image" style="width: 100%; display: block;">
        </div>
        <div class="col-md-8">
            <div class="table-responsive">
                <table class="table " id="dataTableDetail" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Member Name</th>
                      <th>Name Bank</th>
                      <th>Total</th>
                      <th>Title</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                        <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                        <td><%= booking.bankId.nameBank %></td>
                        <td>$ <%= booking.total %></td>
                        <td><%= booking.itemId.title %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              
              <% if(booking.payments.status == 'Proses'){ %>
              <div class="row">
                <div class="col-2">
                  <form action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT" method="POST" >
                    <button class="btn btn-success">
                      Comfirm
                    </button>
                  </form>
                </div>
                <div class="col-2" style="padding-left: 0px;">
                  <form action="/admin/booking/<%= booking.id %>/reject?_method=PUT" method="POST">
                    <button class="btn btn-danger">
                      Reject
                    </button>
                </form>
                </div>
              </div>
              <% } %>
        </div>
    </div>
      
    </div>
  </div>